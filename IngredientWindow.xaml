<Window x:Class="RecipeApp3.IngredientWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Ingredient" Height="350" Width="300">
    <Grid>
        <StackPanel Background="#FFFFB3F9">
            <TextBlock Text="Enter the name of the ingredient:" Margin="10" FontWeight="Bold"/>
            <TextBox x:Name="IngredientNameTextBox" Margin="10"/>
            <TextBlock Text="Enter the quantity:" Margin="10" FontWeight="Bold"/>
            <TextBox x:Name="QuantityTextBox" Margin="10"/>
            <TextBlock Text="Enter the unit:" Margin="10" FontWeight="Bold"/>
            <TextBox x:Name="UnitTextBox" Margin="10"/>
            <TextBlock Text="Enter the number of calories:" Margin="10" FontWeight="Bold"/>
            <TextBox x:Name="CaloriesTextBox" Margin="10"/>
            <TextBlock Text="Enter the food group:" Margin="10" FontWeight="Bold"/>
            <TextBox x:Name="FoodGroupTextBox" Margin="10"/>
            <Button Content="Add Ingredient" Click="AddIngredient_Click" Margin="10"/>
        </StackPanel>
    </Grid>
</Window>
