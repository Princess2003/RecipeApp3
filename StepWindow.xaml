<Window x:Class="RecipeApp3.StepWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Step" Height="200" Width="300">
    <Grid>
        <StackPanel Background="#FFF4D4F6">
            <TextBlock Text="Enter the description of the step:" Margin="10" FontWeight="Bold"/>
            <TextBox x:Name="StepDescriptionTextBox" Margin="10"/>
            <Button Content="Add Step" Click="AddStep_Click" Margin="10" FontWeight="Bold" FontSize="14" Background="#FF845DB9"/>
        </StackPanel>
    </Grid>
</Window>

