<Window x:Class="RecipeApp3.FilterRecipesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Filter Recipes" Height="300" Width="400">
    <Grid>
        <StackPanel Background="#FF7AA1EB">
            <TextBlock Text="Filter by Ingredient:" Margin="10" FontWeight="Bold"/>
            <TextBox x:Name="IngredientTextBox" Margin="10"/>
            <Button Content="Filter" Click="FilterByIngredient_Click" Margin="10" FontWeight="Bold" Background="#FF65F0EA" FontSize="16"/>
            <TextBlock Text="Filter by Food Group:" Margin="10" FontWeight="Bold"/>
            <TextBox x:Name="FoodGroupTextBox" Margin="10"/>
            <Button Content="Filter" Click="FilterByFoodGroup_Click" Margin="10" Background="#FF65F0EA" FontWeight="Bold" FontSize="16"/>
            <TextBlock Text="Filter by Max Calories:" Margin="10" FontWeight="Bold"/>
            <TextBox x:Name="MaxCaloriesTextBox" Margin="10"/>
            <Button Content="Filter" Click="FilterByMaxCalories_Click" Margin="10"/>
            <ListBox x:Name="FilteredRecipesListBox" Margin="10"/>
        </StackPanel>
    </Grid>
</Window>

