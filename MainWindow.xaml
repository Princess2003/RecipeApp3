<Window x:Class="RecipeApp3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Recipe App" Height="450" Width="800">
    <Grid>
        <StackPanel Background="#FFF4D4F6">
            <TextBlock Text="Welcome to Recipe App!" FontSize="24" HorizontalAlignment="Center" Margin="10" FontWeight="Bold"/>
            <Button Content="Create a New Recipe" Click="CreateNewRecipe_Click" Margin="10" Background="#FFBE587D" FontWeight="Bold" FontSize="18"/>
            <Button Content="Display Recipe List" Click="DisplayRecipeList_Click" Margin="10" FontWeight="Bold" FontSize="18" Background="#FFF46D6D"/>
            <Button Content="Filter Recipes" Click="FilterRecipes_Click" Margin="10" Background="#FFAB2154" FontWeight="Bold" FontSize="18"/>
            <Button Content="Exit" Click="Exit_Click" Margin="10" Background="#FFD51616" FontWeight="Bold" FontSize="18"/>
            <ListBox x:Name="RecipeListBox" Margin="10"/>
            <TextBlock x:Name="RecipeDetailsTextBlock" TextWrapping="Wrap" Margin="10"/>
        </StackPanel>
    </Grid>
</Window>

