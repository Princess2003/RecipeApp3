<Window x:Class="RecipeApp3.CreateRecipeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Create New Recipe" Height="450" Width="400">
    <Grid>
        <StackPanel Background="#FFC8F1F4">
            <TextBlock Text="Enter the name of the recipe:" Margin="10" FontWeight="Bold"/>
            <TextBox x:Name="RecipeNameTextBox" Margin="10"/>
            <TextBlock Text="Enter the number of ingredients:" Margin="10" FontWeight="Bold"/>
            <TextBox x:Name="NumIngredientsTextBox" Margin="10"/>
            <Button Content="Add Ingredients" Click="AddIngredients_Click" Margin="10" Background="#FFFFB3F9" FontWeight="Bold"/>
            <TextBlock Text="Enter the number of steps:" Margin="10" FontWeight="Bold"/>
            <TextBox x:Name="NumStepsTextBox" Margin="10"/>
            <Button Content="Add Steps" Click="AddSteps_Click" Margin="10" Background="#FFFFB3F9" FontWeight="Bold"/>
            <Button Content="Create Recipe" Click="CreateRecipe_Click" Margin="10" FontWeight="Bold" Background="#FFFFB3F9"/>
        </StackPanel>
    </Grid>
</Window>

